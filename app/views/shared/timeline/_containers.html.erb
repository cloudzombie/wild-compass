<% containers.each do |container| %>
  <tr>
    <td>
      <%= date_for container.created_at %>
    </td>
    
    <td>
      <%= link_to "#{container}".html_safe, container, class: "btn-sm btn-flat btn-primary" %>
    </td>
    
    <td>
      <%= fa_icon 'arrow-left' %>
    </td>

    <td>
      <%= weight_for container.initial_weight %>
    </td>

    <td>
      <%= fa_icon 'arrow-left' %>
    </td>
    
    <td>
      <% container.plants.each_slice(4) do |slice| %>
        <% slice.each do |plant| %>
          <%= link_to plant.id, plant, class: "btn-sm btn-flat btn-success" %>
        <% end %>
      <% end %>
    </td>

  </tr>
<% end %>