<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 style="margin: 0; padding: 0;">Edit Settings</h3>
  </div>

  <%= form_for(user) do |f| %>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= display_error_for user, :name %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
        <%= display_error_for user, :email %>
      </div>

      <div class="form-group">
        <%= f.label :user_role_id %>
        <%= f.collection_select(:user_role_id, User::Role.all, :id, :to_s, {}, { class: 'form-control' }) %>
        <%= display_error_for user, :user_role_id %>
      </div>

      <div class="form-group">
        <%= f.label :user_group_id %>
        <%= f.collection_select(:user_group_id, User::Group.all, :id, :to_s, {}, { class: 'form-control' }) %>
        <%= display_error_for user, :user_group_id %>
      </div>

      <div class="actions">
        <%= f.submit 'Update Settings', class: 'btn btn-primary btn-flat' %>
      </div>
    </div>
  <% end %>
</div>

<div class="panel panel-warning">
  <div class="panel-heading">
    <h3 style="margin: 0; padding: 0;">Change Password</h3>
  </div>

  <div class="panel-body"> 
    <%= form_for(user) do |f| %> 
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= display_error_for user, :password %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        <%= display_error_for user, :password_confirmation %>
      </div>
    
      <div class="actions">
        <%= f.submit 'Update Password', class: 'btn btn-warning btn-flat' %>
      </div>
    <% end %>
  </div>
</div>
