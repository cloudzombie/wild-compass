<%= form_for(jar) do |f| %>
  <div class="form-group">
    <%= f.label :bag %>
    <%= f.collection_select :bag_id, Bag.all, :id, :to_s, {}, selected: params[:bag], class: 'form-control' %>
    <%= display_error_for jar, :bag %>
  </div>

  <div class="form-group">
    <%= f.label :weight %>
    <%= f.text_field :weight, class: 'form-control', value: number_with_precision(jar.current_weight, precision: 2) %>
    <%= display_error_for jar, :weight %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>