<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listing jars</h3>
    <div class="box-tools">
      <div class="input-group">
        <input type="text"
               name="table_search"
               class="form-control input-sm pull-right"
               style="width: 150px;"
               placeholder="Search"/>

        <div class="input-group-btn">
          <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
        </div>
      </div>
    </div>
  </div><!-- /.box-header -->

  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <tr>
        <th><input id="accept" name="accept" type="checkbox" style="height:100%; width:100%" /></th>
        <th><%= sortable :id, 'ID' %></th>
        <th>Strain</th>
        <th>Category</th>
        <th><%= sortable :current_weight %></th>
        <th>Origin</th>
        <th><%= sortable :created_at %></th>
        <th><%= sortable :updated_at %></th>
        <th>Actions</th>
      </tr>

      <% jars.each do |jar| %>
      <tr>
        <td></td>
        <td><%= jar.id %></td>
        <td><%= jar.lot.strain unless jar.lot.nil? %></td>
        <td><%= jar.lot.category unless jar.lot.nil? %></td>
        <td>
          <%= number_with_precision(
            (jar.current_weight.nil? ? 0 : jar.current_weight) / 1000.0 , precision: 2)
          %> g
        </td>
        <td><%= link_to "#{fa_icon('tag')} #{jar.bag}".html_safe, jar.bag, class: "btn-sm btn-flat btn-warning" %></td>
        <td><%= jar.created_at.to_s :short %></td>
        <td><%= jar.updated_at.to_s :short %></td>
        <td>
          <a class="btn-sm btn-flat btn-info">New Order</a>
          <%= link_to 'Show', jar, class: "btn-sm btn-flat btn-success" %>
        </td>
      </tr>
      <% end %>
    </table>
  </div><!-- /.box-body -->
</div>

<div class="tableFooter">
  <div class="btn-group">
    <button type="button" class="btn btn-info btn-flat dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
      <span class="sr-only">Toggle Dropdown</span>
    </button>
    <button type="button" class="btn btn-info btn-flat">Action</button>
    <ul class="dropdown-menu" role="menu">
      <li><a href="#"></a></li>
      <li><a href="#">Create Bags</a></li>
      <li class="divider"></li>
      <li><a href="#">DÃ©truire</a></li>
    </ul>
  </div>
  <%= link_to 'New lot', new_lot_path, class: "btn btn-flat btn-success"  %>
</div>
