<div class="box box-solid box-danger">
  
  <%= render 'shared/box_header', described: :jars %>

  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= check_box_tag :accept %></th>
          <th><%= sortable :name, 'ID' %></th>
          <th>Strain</th>
          <th>Category</th>
          <th><%= sortable :current_weight, 'Weight' %></th>
          <th><%= sortable :created_at %></th>
          <th><%= sortable :bag_id, 'Origin' %></th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody id="table">
        <%= render 'jars/ajax/table' %>
      </tbody>
    </table>
  </div><!-- /.box-body -->
  
</div>