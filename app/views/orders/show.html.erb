<p id="notice"><%= notice %></p>

<p>
  <strong>Customer:</strong>
  <%= order.customer %>
</p>

<ul>
  <% order.order_lines.each do |line| %>
    <li>
      <%= line %>
      <ul>
        <% line.jars.each do |jar| %>
          <li><%= jar %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>

