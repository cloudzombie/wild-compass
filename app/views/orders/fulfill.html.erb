<% content_for :head do %>
  <script type="text/javascript">
    var auto_refresh_scale1 = setInterval(function() {
      $("#scale-1-reading").load("http://localhost:8080/data").fadeIn("slow");
    }, 100);

    var auto_refresh_scale2 = setInterval(function() {
      $("#scale-2-reading").load("http://localhost:8081/data").fadeIn("slow");
    }, 100);
  </script>
<% end %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><strong>Order Fulfillment</strong></h3>
  </div>

  <div class="panel-body">
    
    <div id="step-1">
      <p class="alert alert-info"><strong>Please scan jar...</strong></p>

      <form id="scan-jar">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
              <div class="input-group">
                
                <%= label_tag 'jar-scan', class: 'input-group-addon' do %>
                  <strong class="col-md-2">Scan Jar</strong>
                <% end %>

                <input type="text" id="jar" class="form-control"></input>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>

    <div id="step-2">
      <p class="alert alert-info"><strong>Please scan bag...</strong></p>

      <form id="scan-bag">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
              <div class="input-group">
                <%= label_tag 'bag-scan', class: 'input-group-addon' do %>
                  <strong class="col-md-2">Scan Bag</strong>
                <% end %>
                <input type="text "id="bag" class="form-control"></input>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>

    <div id="step-3">
      <p class="alert alert-info"><strong>Please put bag on scale 1...</strong></p>
    </div>

    <div id="step-4">
      <p class="alert alert-info"><strong>Please put jar on scale 2...</strong></p>
    </div>

    <div id="step-5">
      <p class="alert alert-info"><strong>Please fill jar with X grams from bag...</strong></p>
    </div>

    <div id="scale-display">
      <%= render 'orders/fulfillment/scale_display' %>
    </div>
  </div>
</div>