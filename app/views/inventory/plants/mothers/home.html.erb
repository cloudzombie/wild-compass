<div role="tabpanel">
  <% if Rails.env.development? %>
    <%= link_to 'Print PDF', inventory_plants_mothers_path( format: :pdf,
                                                            debug: 1,
                                                            direction: sort_direction,
                                                            sort: sort_column),
                 class: 'btn btn-primary pull-right' %>
  <% else %>

    <%= link_to 'Print PDF', inventory_plants_mothers_path( format: :pdf,
                                                            direction: sort_direction,
                                                            sort: sort_column),
                 class: 'btn btn-primary pull-right' %>
  <% end %>

  <%#= link_to 'Print Monthly Report', inventory_download_path, class: 'btn btn-primary pull-right'%>
  
  <%= render 'inventory/nav' %>

  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="mothers">
      <table class="table table-striped">
        <tr>
          <th><%= sortable :name, 'ID' %></th>
          <th><%= sortable :strain_id %></th>
          <th><%= sortable :status_id %></th>
          <th><%= sortable :format_id %></th>
        </tr>

        <% mothers.each do |mother| %>
          <tr>
            <td><%= mother %></td>
            <td><%= strain_for mother.strain %></td>
            <td><%= mother.status %></td>
            <td><%= format_for mother.format %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>