<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Strain</th>
    <th>Category</th>
    <th>Initial Weight (g)</th>
    <th>Current Weight (g)</th>
  </tr>

  <% containers.each do |container| %>
    <tr>
      <td><%= container.try(:to_s) if container.present? %></td>
      <td><%= strain_for container.try(:strain) if container.present? %></td>
      <td><%= container.try(:category) if container.present? %></td>
      <td><%= weight_for container.try(:initial_weight), '' if container.present? %></td>
      <td><%= weight_for container.try(:current_weight), '' if container.present? %></td>
    </tr>
  <% end %>
</table>