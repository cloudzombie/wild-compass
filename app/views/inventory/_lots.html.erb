<table class="table table-striped">
  <tr>
    <th></th>
    <th>Name</th>
    <th>Strain</th>
    <th>Category</th>
    <th>Initial Weight (g)</th>
    <th>Current Weight (g)</th>
  </tr>

  <% lots.each do |lot| %>
    <tr>
      <td></td>
      <td><%= lot %></td>
      <td><%= lot.strain %></td>
      <td><%= lot.category %></td>
      <td><%= number_with_precision lot.initial_weight, precision: 2 %></td>
      <td><%= number_with_precision lot.current_weight, precision: 2 %></td>
    </tr>
  <% end %>
</table>