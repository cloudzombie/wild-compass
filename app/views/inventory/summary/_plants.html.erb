<table class="table table-striped">
  <tr>
    <th class="col-md-10">Plants</th>
    <th class="col-md-2"></th>
  </tr>

  <tr>
    <td>Total Weight Per Strain (g)</td>
    <% Strain.pluck(:name).each do |strain| %>
    <td><%= number_with_precision Plant.total_weight_per_strain(strain), precision: 2 %></td>
    <% end %>
  </tr>

  <tr>
    <td>Total Weight (g)</td>
    <td><%= number_with_precision Plant.total_weight, precision: 2 %></td>
  </tr>
</table>