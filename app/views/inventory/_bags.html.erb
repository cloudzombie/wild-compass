<table class="table table-striped">
  <tr>
    <th></th>
    <th>Name</th>
    <th>Strain</th>
    <th>Category</th>
    <th>Initial Weight (g)</th>
    <th>Current Weight (g)</th>
  </tr>

  <% bags.each do |bag| %>
    <tr>
      <td></td>
      <td><%= bag %></td>
      <td><%= bag.strain %></td>
      <td><%= bag.category %></td>
      <td><%= bag.initial_weight %></td>
      <td><%= bag.current_weight %></td>
    </tr>
  <% end %>
</table>