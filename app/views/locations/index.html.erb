<h1>Listing locations</h1>

<table class="table table-hover loc-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Plant ids</th>
      <th>Bin ids</th>
      <th>Container ids</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.description %></td>
        <td>
          <% location.plants.each do |plant| %>
            <%= link_to plant.id, plant, class: "btn-sm btn-flat btn-success"%>
          <% end %>
        </td>
        <td>
          <% location.bins.each do |bin| %>
            <%= link_to bin.id, bin, class: "btn-sm btn-flat btn-info"%>
          <% end %>
        </td>
        <td>
          <% location.containers.each do |container| %>
            <%= link_to container.id, container, class: "btn-sm btn-flat btn-warning"%>
          <% end %>
        </td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
