<%= content_for :head do %>
  <style>
    body {
      background: url( <%= label_stream_bin_path bin %> );
      background-size: cover;
      background-repeat: no-repeat;
    }

    h1 {
      font-size: 3em;
      
      text-align: right;
      padding-right: 100px;
      
      position: relative;
      top: 50%;
      -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
      transform: translateY(-50%);
    }
  </style>
<% end %>

<h1><%= "BIN: #{bin.name.upcase}" %></h1>
