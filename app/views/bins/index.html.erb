<div class="box box-solid box-warning">
  <div class="box-header">
    <h3 class="box-title">Listing Bins</h3>
    <div class="box-tools">
      <div class="input-group">
        <%= form_tag(bins_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control input-sm pull-right" %>
        <% end %>
        <div class="input-group-btn">
          <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
        </div>
      </div>
    </div>
  </div>

  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <tr>
        <th><%= check_box_tag :accept %></th>
        <th> ID </th>
        <th><%= :name %></th>
        <th><%= :location %></th>
        <th>Content : </th>
        <th>Actions</th>
      </tr>

      <% bins.each do |bin| %>
      <tr>
        <td><%= check_box_tag :accept %></td>
        <td><%= bin.id %></td>
        <td><%= bin.name %></td>
        <td><%= bin.location %>
        <td>
          <% bin.bags.each do |bag| %>
            <%= link_to bag, bag, class: "btn-sm btn-flat btn-warning" %>
          <% end %>
        </td>
        <td>
          <%= render 'shared/print_label', item: bin %>

          <% if can? :edit, bin %>
          <%= link_to "#{fa_icon('circle')} Edit".html_safe, edit_bin_path(bin), class: "btn-sm btn-flat btn-warning" %>
          <% end %>
        </td>
      </tr>
      <% end %>

    </table>
  </div><!-- /.box-body -->    
</div><!-- /.box -->

<div class="tableFooter">
  <%= link_to "#{fa_icon 'square'} New bin".html_safe, '#', class: 'btn btn-flat btn-warning',
      data: { toggle: 'modal', target: '.new-bin'} %>

  <%#= paginate bins %>
</div>

<%= render 'bins/modal/new' %>