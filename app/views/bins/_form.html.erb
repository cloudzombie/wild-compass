<%= form_for(bin) do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :location %>
    <%= f.collection_select(:location_id, locations, :id, :name, {}, { class: 'form-control' }) %>
  </div>

  <div class="form-group">
    <%= f.label :bags %>
    <%= f.collection_select(:bag_ids, bags, :id, :name, {}, { multiple: 'multiple', class: 'textboxlist form-control' }) %>
  </div>
  
  <div class="actions">
    <%= f.submit :submit, class: 'btn btn-default' %>
  </div>
<% end %>
