<%= form_for(bin) do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :location %>
    <%= f.collection_select(:location_id, Location.all, :id, :to_s, {}, { class: 'form-control' }) %>
  </div>

  
  <div class="actions">
    <%= f.submit :submit, class: 'btn btn-default' %>
  </div>
<% end %>
