<div class="box box-solid box-success">
  <div class="box-header">
    <i class="fa fa-leaf"></i>
    <h3 class="box-title">Timeline</h3>
  </div>
  <div class="box-body">
    <table id="seed-table" class="table table-hover">
      <tr>
        <th class="col-md-2">Plants</th>
      </tr>

      <tr>
        <td ><% ordered_by_id(seed.try(:plants)).uniq.each do |plant| %>
          <%= link_to "#{plant}".html_safe, plant, class: "btn-sm btn-flat btn-success" %>
        <% end %></td>
      </tr>
      <tr>
        <th class="col-md-2">Lots</th>
      </tr>
      <tr><td >
        <% ordered_by_id(seed.try(:lots)).uniq.each do |lot| %>
          <%= link_to "#{lot}".html_safe, lot, class: "btn-sm btn-flat btn-info" %>
        <% end %>
      </td></tr>

      <tr>
        <th class="col-md-2">Containers</th>
      </tr>
      <tr><td >
        <% ordered_by_id(seed.try(:containers)).uniq.each do |container| %>
          <%= link_to "#{container}".html_safe, container, class: "btn-sm btn-flat btn-primary" %>
        <% end %>
      </td></tr>     

      <tr>
        <th class="col-md-2">Bags</th>
      </tr> 
      <tr><td >
        <% ordered_by_id(seed.try(:bags)).uniq.each do |bag| %>
          <%= link_to "#{bag}".html_safe, bag, class: "btn-sm btn-flat btn-warning" %>
        <% end %>
      </td></tr>

      <tr>
        <th class="col-md-2">Jars</th>
      </tr>
      <tr><td >
        <% ordered_by_id(seed.try(:jars)).uniq.each do |jar| %>
          <%= link_to "#{jar}".html_safe, jar, class: "btn-sm btn-flat btn-warning" %>
        <% end %>
      </td></tr>
    </table>
  </div>
</div>