<div class="<%= lot.brand.nil? ? '' : "brand-#{lot.brand.id}" %>"> 
  <div class="row">
    <div class="col-lg-6">
      <div class="row">
        <div class="col-lg-12">
          <div class='transparent-box'>
            <%= render 'shared/box_description', title: lot, described: lot, color: 'info', icon: 'tags' %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <div class='transparent-box'>
            <%= render 'shared/box_origins', described: lot, origins: lot.plants, color: 'success', icon: 'leaf', title: 'Plants' %>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-lg-12">
          <div class='transparent-box'>
            <%= render 'shared/box_history', described: lot %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class='transparent-box'>
        <%= render 'shared/timeline', described: lot %>
      </div>
    </div>
  </div>
</div>