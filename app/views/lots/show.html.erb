<p id="notice"><%= notice %></p>
<h4><%= lot.name %></h4>
<div class="row">
  <div class="col-lg-2">
    <div class="box-header">
      <h3 class="box-title">Links</h3>
    </div>
    <a class="btn btn-block btn-warning" data-toggle="modal" data-target=".newJar"><i class="fa fa-flask"></i> New Bag</a>
    <a class="btn btn-block btn-success" data-toggle="modal" data-target=".newJar"><i class="fa fa-leaf"></i> Origin Plant</a>
  </div>
  <div class="col-lg-5">
    <div class="box box-solid box-info">
      <div class="box-header">
      <i class="fa fa-tag"></i>
      <h3 class="box-title">Description</h3>
      </div> 
      <div class="box-body">
        <div class="row">
          <div class="col-lg-10">
            <dl class="dl-horizontal description">
              <dt>ID :</dt>
              <dd><%= lot.id %></dd>
              <dt>Name :</dt>
              <dd><%= lot %></dd>
              <dt>Strain :</dt>
              <dd><%= lot.strain %></dd>
              <dt>Type :</dt>
              <dd><%= lot.category %></dd>
              <dt>Initial Weight : </dt>
              <dd><%= number_with_precision(
                (lot.initial_weight.nil? ? 0 : lot.initial_weight) , precision: 2)
                %> g</dd>
              <dt>Current Weight :</dt>	
              <dd><%= number_with_precision(
                (lot.current_weight.nil? ? 0 : lot.current_weight) / 1000.0, precision: 2)
                %> g</dd>
              <dt>Created At :</dt>
              <dd><%= lot.created_at.to_s :short %></dd>
              <dt>Updated At :</dt>
              <dd><%= lot.updated_at.to_s :short %></dd> 
            </dl>
          </div>
          <div class="col-lg-2">
            <div class="progress vertical">
              <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="<%= percent_of_weight(lot) %>" aria-valuemin="0" aria-valuemax="100" style="height: <%= percent_of_weight(lot) %>%">
                <span class="sr-only"><%= percent_of_weight(lot) %>%</span>
              </div>
            </div>
          </div>
        </div>
      </div> 
    </div>
  </div>
  <div class="col-lg-5">
    <div class="box box-solid box-success">
      <div class="box-header">
        <i class="fa fa-tag"></i>
        <h3 class="box-title">Origin</h3>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-lg-10">
            <dl class="dl-horizontal description">
              <dt>Plant</dt>
              <dd>Plant description.</dd>
            </dl>
          </div>
          <div class="col-lg-2">
            <div class="progress vertical">
              <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="height: 50%">
                <span class="sr-only">50%</span>
              </div>
            </div>
          </div>
      </div> 
    </div>
  </div>
</div>
</div>
  <div class="row">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-7">
      <div class="box box-solid box-warning">
        <div class="box-header">
          <i class="fa fa-flask"></i>
          <h3 class="box-title">History</h3>
         </div>
        <div class="box-body">
        <ul class="timeline">
    <!-- timeline time label -->
    <li class="time-label">
        <span class="">
            <span class="time"><%= lot.created_at.to_s :short %></span>
        </span>
    </li>
    <!-- /.timeline-label -->

    


          <% lot.history.history_lines.each do |lines| %>

			<!-- timeline item -->
		   	<li>
		        <!-- timeline icon -->
		        <i class="fa fa-tags bg-yellow"></i>
		        <div class="timeline-item">
		            <span class="time"><i class="fa fa-clock-o"></i> <%= lines.created_at.to_s :short %></span>
		            <h3 class="timeline-header">New Bag</h3>
       				  <div class="timeline-body">
       			
       				  <br/>
		           		<a class="btn btn-info btn-xs"><i class="fa fa-tags"></i><%= lot %></a> send <%= lines.quantity %> g to <%= link_to "bag #{lines.target.id}", bag_path, class: "btn btn-warning btn-xs" %>
		              </div>
		            <div class="timeline-footer">
		            Done by User
		            </div>
		        </div>
		    </li>
		    <!-- END timeline item -->
      
          <%  end %>
          </ul>
        </div> 
      </div>
    </div>
    <div class="col-lg-3">
    </div>
  </div>

    
