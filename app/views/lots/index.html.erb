<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listing lots</h3>
    <div class="box-tools">
      <div class="input-group">
        <input type="text"
               name="table_search"
               class="form-control input-sm pull-right"
               style="width: 150px;"
               placeholder="Search"/>

        <div class="input-group-btn">
          <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
        </div>
      </div>
    </div>
  </div><!-- /.box-header -->

  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <tr>
        <th><%= check_box_tag :accept %></th>
        <th>ID :</th>
        <th>Name :</th>
        <th>Strain :</th>
        <th>Category :</th>
        <th>Initial Weight </th>
        <th>Current Weight :</th>
        <th>Last time used :</th>
        <th>Actions :</th>
      </tr>

      <% lots.each do |lot| %>
      <tr>
        <td><%= check_box_tag :accept %></td>
        <td><%= lot.id %></td>
        <td><%= lot %></td>
        <td><%= lot.strain %></td>
        <td><%= lot.category %></td>
        <td>
          <%= number_with_precision(
            (lot.initial_weight.nil? ? 0 : lot.initial_weight) / 1000.0, precision: 2)
          %> g
        </td>
        <td>
          <%= number_with_precision(
            (lot.current_weight.nil? ? 0 : lot.current_weight) / 1000.0, precision: 2)
          %> g
        </td>
        <td>29-Dec-2015</td>
        <td>
        <a href="#" class="btn-sm btn-flat btn-warning" data-toggle="modal" data-target=".newBag">New bag</a>
          <%= link_to 'Show', lot, class: "btn-sm btn-flat btn-success" %>
          <!--<%= link_to 'Edit', lot, class: "btn-sm btn-flat btn-primary" %>
          <%= link_to 'Destroy', lot, method: :delete, data: { confirm: 'Are you sure?' },
                      class: "btn-sm btn-flat btn-danger" %> -->
        </td>
      </tr>
      <% end %>
    </table>
  </div><!-- /.box-body -->
</div>

<div class="tableFooter">
  <div class="btn-group">
    <button type="button" class="btn btn-info btn-flat dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
      <span class="sr-only">Toggle Dropdown</span>
    </button>
    <button type="button" class="btn btn-info btn-flat">Action</button>
    <ul class="dropdown-menu" role="menu">
      <li><a href="#"></a></li>
      <li><a href="#">Create Bags</a></li>
      <li class="divider"></li>
      <li><a href="#">DÃ©truire</a></li>
    </ul>
  </div>
  <%= link_to 'New lot', new_lot_path, class: "btn btn-flat btn-success"  %>
</div>


<div class="modal fade newBag" tabindex="-1" role="dialog" aria-labelledby="New Bag" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <h3>Create a new bag</h3>
      <%= render 'bags/form', lot: lot %>
    </div>
  </div>
</div>