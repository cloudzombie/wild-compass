
    <div class="box box-solid box-info">
      <div class="box-header">
        <h3 class="box-title">Listing lots</h3>
        <div class="box-tools">
          <div class="input-group">
            <input type="text"
                   name="table_search"
                   class="form-control input-sm pull-right"
                   style="width: 150px;"
                   placeholder="Search"/>

            <div class="input-group-btn">
              <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </div><!-- /.box-header -->

      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tr>
            <th><%= check_box_tag :accept %></th>
            <th><%= sortable :name, "ID" %></th>
            <th><%= sortable :strain %></th>
            <th><%= sortable :category %></th>
            <th><%= sortable :initial_weight %></th>
            <th><%= sortable :current_weight %></th>
            <th><%= sortable :created_at %></th>
            <th><%= sortable :updated_at %></th>
            <th>Actions</th>
          </tr>

          <% lots.each do |lot| %>
          <tr>
            <td><%= check_box_tag :accept %></td>
            <td><%= lot %></td>
            <td><%= lot.strain %></td>
            <td><%= lot.category %></td>
            <td>
              <%= number_with_precision(
                (lot.initial_weight.nil? ? 0 : lot.initial_weight), precision: 2) %> g
            </td>
            <td>
              <%= number_with_precision((lot.current_weight.nil? ? 0 : lot.current_weight), precision: 2) %> g
            </td>
            <td><%= lot.created_at.to_s :short %></td>
            <td><%= lot.updated_at.to_s :short %></td>
            <td>

             <a href="#" class="btn-sm btn-flat btn-success" data-toggle="modal" data-target="#<%= lot.id %>"><i class="fa fa-tags"></i> Containers</a>
              <%= link_to "#{fa_icon('tag')} New Bag".html_safe, '#', class: 'btn-sm btn-flat btn-warning', data: { toggle: 'modal', target: '.new-bag' } %>
              <%= link_to "#{fa_icon('tags')} Show".html_safe, lot, class: "btn-sm btn-flat btn-info" %>
              <%= link_to "#{fa_icon('circle')} Edit".html_safe, edit_lot_path(lot), class: "btn-sm btn-flat btn-warning" %>

            </td>
          </tr>
          <% end %>
        </table>
      </div><!-- /.box-body -->
    </div>


    <div class="tableFooter">
        <a href="#" class="btn btn-flat btn-info" data-toggle="modal" data-target=".new-lot"><i class="fa fa-tags"></i> New lot</a>
    </div>

    <% lots.each do |lot| %>
    <div class="modal fade new-bag" id="<%= lot.id %>" tabindex="-1" role="dialog" aria-labelledby="Containers" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <h3>Containers for <%= link_to "#{fa_icon('tags')} #{lot}".html_safe, lot, class: "btn btn-flat btn-info" %></h3>
            <table class="table table-hover">
              <tr>
                <th>Name :</th>
                <th>Weight :</th>
                <th>Category :</th>
              </tr>
                <% Container.where('lot_id = ?', lot.id).each do |container| %>
                <tr>
                  <td><%= container %></td>
                  <td><%= container.current_weight %></td>
                  <td><%# container.category unless container.lot.nil? %></td>
                </tr>
                <% end %>
            </table>
        </div>
      </div>
    </div>
    <% end %>
    
    <div class="modal fade new-bag" tabindex="-1" role="dialog" aria-labelledby="New Bag" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <h3>Create a new bag</h3>
          <%= render 'bags/form', lot: lot %>
        </div>
      </div>
    </div>

    <div class="modal fade new-lot" tabindex="-1" role="dialog" aria-labelledby="New Lot" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <h3>Create a new lot</h3>
          <%= render 'lots/form' %>
        </div>
      </div>
    </div>