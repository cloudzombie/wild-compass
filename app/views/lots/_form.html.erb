<%= form_for(lot) do |f| %>
    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= display_error_for lot, :name %>
  </div>

  <div class="form-group">
    <%= f.label :initial_weight %>
    <%= f.text_field :initial_weight , class: 'form-control' %>
    <%= display_error_for lot, :initial_weight %>
  </div>

 
  <div class="form-group">
    <%= f.label :strain_id %>
    <%= f.collection_select :strain_id, Strain.all, :id, :name, {} , class: 'form-control' %>
    <%= display_error_for lot, :strain_id %>
  </div>

  <div class="form-group">
    <%= f.label 'Type' %>
    <%= f.select :category, ['Buds', 'Trim'], {}, class: 'form-control' %>
    <%= display_error_for lot, :category %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
