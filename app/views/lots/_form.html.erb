<%= form_for(lot) do |f| %>
    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= display_error_for lot, :name %>
  </div>

  <div class="form-group">
    <%= f.label :strain_id %>
    <%= f.collection_select :strain_id, Strain.all, :id, :name, {} , class: 'form-control' %>
    <%= display_error_for lot, :strain_id %>
  </div>

  <div class="form-group">
    <%= f.label 'Type' %>
    <%= f.select :category, ['Buds', 'Trim'], {}, class: 'form-control' %>
    <%= display_error_for lot, :category %>
  </div>

  <div class="form-group">
    <%= f.label :initial_weight %>
    <%= f.text_field :initial_weight , class: 'form-control', value: number_with_precision(lot.current_weight, precision: 2) %>
    <%= display_error_for lot, :weight %>
  </div>

  <div class="form-group">
    <%= f.label :current_weight %>
    <%= f.text_field :current_weight, class: 'form-control', value: number_with_precision(bag.initial_weight, precision: 2) %>
    <%= display_error_for bag, :weight %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
