<div class="box box-solid box-success">
  <%= render 'shared/box_header', described: :plants %>

  <div class="box-body table-responsive no-padding">
    <%= form_for :plants do |f| %>
      <table class="table table-hover">
        <tr>
          <th><%= check_box_tag :accept %></th>
          <th><%= sortable :name, 'ID' %></th>
          <th><%= sortable :strain_id %></th>
          <th><%= sortable :status_id %></th>
          <th><%= sortable :format_id %></th>
          <th><%= sortable :location_id %></th>
          <th>Actions</th>
        </tr>
        <tbody id="table">
          <%= render 'plants/ajax/table' %>
        </tbody>
      </table>
    <% end %>
  </div> 
</div>

<div class="tableFooter">
  <%= link_to "#{fa_icon 'leaf'} New Plant".html_safe, '#', class: 'btn btn-flat btn-success',
      data: { toggle: 'modal', target: '.new-plant' } %>
  <div id="paginator">
    <%= paginate plants, remote: true %>
  </div>
</div>

<%= render 'plants/modal/new' %>
