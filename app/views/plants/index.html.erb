  <div class="box">
    <div class="box-header">
        <h3 class="box-title">Listing plants</h3>
        <div class="box-tools">
            <div class="input-group">
                <input type="text" name="table_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search"/>
                <div class="input-group-btn">
                    <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                </div>

            </div>
        </div>
    </div><!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
            <tr>
                <th><input id="accept" name="accept" type="checkbox" style="height:100%, width:100%" /></th>
                <th><%= check_box_tag :accept %></th>
                <th>ID</th>
                <th><%= :name %></th>
                <th>Strain :</th>
                <th>Status :</th>
                <th><%=  %></th>
                <th><%= :created_at %></th>
                <th><%= :updated_at %></th>
                <th>Format</th>
                <th>RFID</th>
                <th>Origin</th>
                <th>Actions</th>
            </tr>
            <% plants.each do |plant| %>
              <tr>
                <td></td>
                <td><%= :id %></td>
                <td><%= :name %></td>
                <td><%= :strain %></td>
                <td>
                  <div class="input-group input-group-sm">
                  <button class="btn-sm btn-flat btn-success">Growing</button>                 
                 
                    <button type="button" class="btn-sm btn-flat dropdown-toggle btn-success" data-toggle="dropdown">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Growing</a></li>
                        <li><a href="#">Curing</a></li>
                        <li><a href="#">Drying</a></li>
                    </ul>
                  </div>
                </td>
                <td><%= :created_at %></td>
                <td><%= :updated_at %></td>
                <td><%= :format %></td>
                <td><!-- <%= :RFID %> --></td>
                <td><!-- <%= :origin %> --></td>
                <td>
                    <%= link_to 'Show', plant, class: "btn-sm btn-flat btn-success" %>
                    <%= link_to 'Edit', edit_plant_path(plant), class: "btn-sm btn-flat btn-primary" %>
                    <!--
                    <%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-flat btn-danger" %>-->
                </td>
              </tr>
            <% end %>            
        </table>
    </div><!-- /.box-body -->    
  </div>
    <div class="tableFooter">
        
        <a href="#" class="btn btn-flat btn-success" data-toggle="modal" data-target=".new-plant"><i class="fa fa-leaf"></i> New Plant</a>
    </div>

<div class="modal fade new-plant" tabindex="-1" role="dialog" aria-labelledby="New Plant" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <h3>Create a new plant</h3>
      <%= render 'plants/form' %>
    </div>
  </div>
</div>