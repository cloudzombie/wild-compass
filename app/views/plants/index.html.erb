<div class="box box-solid box-success">
  <div class="box-header">
    <h3 class="box-title">Listing plants</h3>
    <div class="box-tools">
      <div class="input-group">
        <%= form_tag(plants_path, method: :get, id: "search-form", remote: true, autocomplete: 'off') do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control input-sm pull-right" %>
        <% end %>
        <div class="input-group-btn">
          <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
        </div>
      </div>
    </div>
  </div><!-- /.box-header -->

  <div class="box-body table-responsive no-padding">
    <%= form_for :plants do |f| %>
      <table class="table table-hover">
        <tr>
          <th><%= check_box_tag :accept %></th>
          <th><%= sortable :name, 'ID' %></th>
          <th><%= sortable :strain_id %></th>
          <th><%= sortable :plant_id, 'Origin' %></th>
          <th><%= sortable :seed_id %></th>
          <th><%= sortable :status_id %></th>
          <th><%= sortable :format_id %></th>
          <th><%= sortable :location_id %></th>
          <th><%= sortable :rfid, 'RFID' %></th>
          <th><%= sortable :created_at %></th>
          <th><%= sortable :updated_at %></th>
          <th>Actions</th>
        </tr>
        <tbody id="table">
          <%= render 'plants/ajax/table' %>
        </tbody>
      </table>
    <% end %>
  </div> 
</div>

<div class="tableFooter">
  <%= link_to "#{fa_icon 'leaf'} New Plant".html_safe, '#', class: 'btn btn-flat btn-success',
      data: { toggle: 'modal', target: '.new-plant' } %>
  <div id="paginator">
    <%= paginate plants, remote: true %>
  </div>
</div>

<%= render 'plants/modal/new' %>
