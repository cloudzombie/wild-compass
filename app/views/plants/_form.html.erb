<%= form_for(plant) do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= display_error_for plant, :name %>
  </div>

  <div class="form-group">
    <%= f.label :location_id %>
    <%= f.collection_select(:location_id, Location.all, :id, :to_s, {}, { class: 'form-control' }) %>
  </div>

  <div class="form-group">
    <%= f.label :plant_id, 'Origin' %>
    <%= f.collection_select(:plant_id, Plant.all, :id, :to_s, {}, { class: 'form-control' }) %>
    <%= display_error_for plant, :plant_id %>
  </div>

  <div class="form-group">
    <%= f.label :seed_id, 'Origin' %>
    <%= f.collection_select(:seed_id, Seed.all, :id, :to_s, {}, { class: 'form-control' }) %>
    <%= display_error_for plant, :seed_id %>
  </div>

  <div class="form-group">
    <%= f.label :strain_id %>
    <%= f.collection_select(:strain_id, Strain.all, :id, :to_s, {}, { class: 'form-control' }) %>
    <%= display_error_for plant, :strain_id %>
  </div>

  <div class="form-group">
    <%= f.label :format_id %>
    <%= f.collection_select(:format_id, Format.all, :id, :to_s, {}, { class: 'form-control' }) %>
    <%= display_error_for plant, :format_id %>
  </div>

  <div class="form-group">
    <%= f.label :status %>
    <%= f.collection_select(:status_id, Status.all, :id, :to_s, {}, { class: 'form-control' }) %>
    <%= display_error_for plant, :status %>
  </div>
  
  <div class="input-group">
    <%= f.submit :submit, class: 'btn btn-default' %>
  </div>
<% end %>
