<%= form_for(plant) do |f| %>
  <% if plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(plant.errors.count, "error") %> prohibited this plant from being saved:</h2>
      <ul>
        <% plant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :cultivar %>
    <%= f.collection_select(:cultivar_id, Cultivar.all, :id, :to_s, {}, { class: 'form-control' }) %>
  </div>

  <div class="form-group">
    <%= f.label :format %>
    <%= f.collection_select(:format_id, Format.all, :id, :to_s, {}, { class: 'form-control' }) %>
  </div>

  <div class="form-group">
    <%= f.label :status %>
    <%= f.collection_select(:status_id, Status.all, :id, :to_s, {}, { class: 'form-control' }) %>
  </div>

  <div class="form-group">
    <%= f.label :rfid %>
    <%= f.collection_select(:rfid_id, Rfid.all, :id, :to_s, {}, { class: 'form-control' }) %>
  </div>

  <div class="form-group">
    <%= f.label :lot %>
    <%= f.collection_select(:lot_id, Lot.all, :id, :to_s, {}, { class: 'form-control' }) %>
  </div>

  <div class="form-group">
    <%= f.label :origin %>
    <%= f.text_field :origin, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Envoyer', class: 'btn btn-default' %>
  </div>
<% end %>
