
    <div class="box box-solid box-info">
      <div class="box-header">
        <h3 class="box-title">Listing containers</h3>
        <div class="box-tools">
          <div class="input-group">
            <input type="text"
                   name="table_search"
                   class="form-control input-sm pull-right"
                   style="width: 150px;"
                   placeholder="Search"/>

            <div class="input-group-btn">
              <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </div><!-- /.box-header -->

      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tr>
            <th></th>
            <th>Lot :</th>
            <th>Name :</th>
            <th>Strain :</th>
            <th>Category :</th>
            <th>Actions</th>
          </tr>

          <% @containers.each do |container| %>
          <tr>
            <td><%= check_box_tag :accept %></td>
            <td><%= container.lot %></td>
            <td><%= container %></td>
            <td><%= container.strain %></td>
            <td><%= container.category %></td>
            <td>
              <%= number_with_precision(
                (container.initial_weight.nil? ? 0 : container.initial_weight), precision: 2) %> g
            </td>
            <td>
              <%= number_with_precision((container.current_weight.nil? ? 0 : container.current_weight), precision: 2) %> g
            </td>
            <td><%= container.created_at.to_s :short %></td>
            <td><%= container.updated_at.to_s :short %></td>
            <td>

             <a href="#" class="btn-sm btn-flat btn-success" data-toggle="modal" data-target="#<%= container.id %>"><i class="fa fa-tags"></i> Containers</a>
              <%= link_to "#{fa_icon('tag')} New Bag".html_safe, '#', class: 'btn-sm btn-flat btn-warning', data: { toggle: 'modal', target: '.new-bag' } %>
              <%= link_to "#{fa_icon('tags')} Show".html_safe, container, class: "btn-sm btn-flat btn-info" %>
              <%= link_to "#{fa_icon('circle')} Edit".html_safe, edit_container_path(container), class: "btn-sm btn-flat btn-warning" %>

            </td>
          </tr>
          <% end %>
        </table>
      </div><!-- /.box-body -->
    </div>


    <div class="tableFooter">
        <a href="#" class="btn btn-flat btn-info" data-toggle="modal" data-target=".new-container"><i class="fa fa-tags"></i> New container</a>
    </div>

    <div class="modal fade new-container" tabindex="-1" role="dialog" aria-labelledby="New Container" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <h3>Create a new container</h3>
          <%= render 'containers/form' %>
        </div>
      </div>
    </div>