<%= form_for(container) do |f| %>
  
  <div class="form-group">
    <%= f.label :plant_ids %>
    <%= f.collection_select(:plant_ids, Plant.all, :id, :to_s, {},
        { multiple: 'multiple', class: 'textboxlist form-control ' }) %>
    <%= display_error_for container, :plant_ids %>
  </div> 
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= display_error_for container, :name %>
  </div>

  <div class="form-group">
    <%= f.label :type %>
    <%= f.select :type, options_for_select([
          'Container::Stage2Container::BudsContainer',
          'Container::Stage2Container::TrimContainer',
          'Container::Stage1Container::UnprocessedContainer',
          'Container::Stage1Container::BudsOnStemContainer',
          'Container::Stage1Container::TrimContainer'
        ]), {}, class: 'form-control' %>
    <%= display_error_for container, :type %>
  </div>

  <div class="form-group">
    <%= f.label :category, 'Type' %>
    <%= f.select :category, ['Buds', 'Trim', 'Unprocessed', 'BudsOnStem'], {}, class: 'form-control' %>
    <%= display_error_for container, :category %>
  </div>

  <div class="form-group">
    <%= f.label :initial_weight %>
    <%= f.text_field :initial_weight, class: 'form-control', value: weight_for(container.initial_weight, '') %>
    <%= display_error_for container, :initial_weight %>
  </div>

  <div class="form-group">
    <%= f.label :current_weight %>
    <%= f.text_field :current_weight, class: 'form-control', value: weight_for(container.current_weight, '') %>
    <%= display_error_for container, :current_weight %>
  </div>

  <div class="form-group">
    <%= f.label :location_id %>
    <%= f.collection_select(:location_id, Location.all, :id, :to_s, {}, { class: 'form-control' }) %>
    <%= display_error_for container, :location_id %>
  </div>

  <div class="input-group">
    <%= f.submit nil, class: 'btn btn-flat btn-primary' %>
  </div>

<% end %>
