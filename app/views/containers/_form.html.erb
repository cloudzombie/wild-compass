<%= form_for(container) do |f| %>

  <div class="form-group">
    <%= f.fields_for :plants do |plants_field| %>
      <%= plants_field.label :id %>
      <%= plants_field.collection_select :id, Plant.all, :id, :to_s, {}, selected: params[:plant], class: 'form-control' %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :plant_id %>
    <%= f.collection_select :plant_id, Plant.all, :id, :name, {}, selected: params[:lot], class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :weight %>
    <%= f.text_field :weight, class: 'form-control', value: weight_for(container.try(:initial_weight), '') %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
