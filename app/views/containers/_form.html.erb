<%= form_for(container) do |f| %>

  <div class="form-group">
    <%= f.label :plants %>
    <% plants.each_slice(6) do |slice| %>
    <div class="row">
      <% slice.each do |plant| %>
      <div class="col-lg-2">
        <%= check_box_tag "container[plant_ids][]", plant.id, container.plants.include?(plant) %>
        <%= label_tag plant %>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category, 'Type' %>
    <%= f.select :category, ['Buds', 'Trim', 'Unprocessed'], {}, class: 'form-control' %>
    <%= display_error_for container, :category %>
  </div>

  <div class="form-group">
    <%= f.label :weight %>
    <%= f.text_field :weight, class: 'form-control', value: weight_for(container.try(:initial_weight), '') %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
