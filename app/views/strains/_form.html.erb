<%= form_for(strain) do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= display_error_for strain, :name %>
  </div>

  <div class="form-group">
    <%= f.label :acronym %>
    <%= f.text_field :acronym, class: 'form-control' %>
    <%= display_error_for strain, :acronym %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
    <%= display_error_for strain, :description %>
  </div>

  <div class="form-group">
    <%= f.label :brand_id %>
    <%= f.collection_select :brand_id, Brand.all, :id, :name, {}, selected: params[:brand], class: 'form-control' %>
    <%= display_error_for strain, :brand_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
