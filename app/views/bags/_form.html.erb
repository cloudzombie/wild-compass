<%= form_for(bag) do |f| %>
  <div class="form-group">
    <%= f.label :lot_id %>
    <%= f.collection_select :lot_id, Lot.all, :id, :name, {}, selected: params[:lot], class: 'form-control' %>
    <%= display_error_for bag, :lot_id %>
  </div>

  <div class="form-group">
    <%= f.label :initial_weight %>
    <%= f.text_field :initial_weight, class: 'form-control' %>
    <%= display_error_for bag, :initial_weight %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
