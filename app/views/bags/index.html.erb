                    <button type="button" class="btn-sm btn-flat dropdown-toggle btn-warning" data-toggle="dropdown">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Sealed</a></li>
                        <li><a href="#">Opened</a></li>
                    </ul>
                  </div>
                </td>
                <td>Lot#001</td>
                <td>Pot#011</td>
                <td>
                    <%= link_to 'Show', bag, class: "btn-sm btn-flat btn-success" %>
                    <%= link_to 'Edit', edit_bag_path(bag), class: "btn-sm btn-flat btn-primary" %>
                    <%= link_to 'Destroy', bag, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-flat btn-danger" %>
