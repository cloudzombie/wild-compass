<div class="box box-solid box-success">
  <div class="box-header">
    <i class="fa fa-leaf"></i>
    <h3 class="box-title">Timeline</h3>
  </div>
  
  <div class="box-body">
    <table id="timeline" class="table table-hover">

      <tr>
        <th class="col-md-2">Event</th>
        <th class="col-md-3">Target</th>
        <th class="col-md-1"></th>
        <th class="col-md-2">Weight</th>
        <th class="col-md-1"></th>
        <th class="col-md-3">Source</th>
      </tr>

      <%= render 'shared/timeline/lot', lt: described.lot unless described.lot.nil? %>
      <%= render 'shared/timeline/container', ct: described.container unless described.container.nil? %>
      <%= render 'shared/timeline/bag', bg: described %>
      <%= render 'shared/timeline/jars', jrs: described.jars unless described.jars.nil? %>
      
    </table>
  </div>
</div>